<Window x:Class="Project_Organizer_ALPHA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Organizer_ALPHA"
        mc:Ignorable="d"
        Title="SHIIVA Project Organizer v0.0.1" Height="768" Width="1366" ResizeMode="NoResize"  Background="#060211">

    <Window.Resources>
        <Style TargetType="ListView">
            <Setter Property="BorderBrush" Value="#9b1620"></Setter>
            <Setter Property="FontFamily" Value="Roboto"></Setter>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Roboto"></Setter>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <ListView x:Name="foldersListView" ItemsSource="{Binding project_folders}" Background="Black" Margin="140,10,140,117" MouseDoubleClick="folderListView_DoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Путь к папке" DisplayMemberBinding="{Binding Path}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Add Folder" HorizontalAlignment="Center" Margin="0,684,0,0" VerticalAlignment="Top" Height="31" Width="110" Click="Button_Click"/>
        <TextBox x:Name="PathInfo" HorizontalAlignment="Left" Margin="584,649,0,0" TextWrapping="Wrap" Text="Path" VerticalAlignment="Top" Width="120"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="795,657,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="36" Width="114" Click="Button_Click_1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.48"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Repack" HorizontalAlignment="Left" Margin="277,664,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.568,-0.324" Height="31" Width="148" Click="Button_Click_2"/>

    </Grid>
</Window>
