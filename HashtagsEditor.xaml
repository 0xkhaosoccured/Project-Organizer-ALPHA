<Window x:Class="Project_Organizer_ALPHA.HashtagsEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Organizer_ALPHA"
        mc:Ignorable="d"
        Title="HashtagsEditor" Height="150" Width="250" Background="Black">
    <Grid>
        <Label Content="Your hashtag is..." HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" FontSize="5" Foreground="White"/>
        <TextBox x:Name="hashtag_box" HorizontalAlignment="Center" FontSize="20" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="33" Margin="0,34,0,0"/>
        <Button Content="Add" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.144,0.369" Width="122" Click="Button_Click"/>


    </Grid>
</Window>
